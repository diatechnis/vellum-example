<div class="row">
    {% for item in items %}
    <div class="col-sm">
        <article class="card">
            <div class="card-body">
                <h3 class="card-title">
                    {{ vellum_component('Link', {
                        name: item.title,
                        href: item.href,
                        target: item.target
                    }) }}
                </h3>
                <p class="card-text">{{ item.summary }}</p>
            </div>
            <img src="{{ item.image.small }}" class="card-img-bottom" alt="">
        </article>
    </div>
    {% endfor %}
</div>
